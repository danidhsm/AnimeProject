<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#000000">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/imageSerie"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="false"
            />

    <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageSerie"
            android:layout_toLeftOf="@+id/currentEpisode"
            android:layout_marginRight="5dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de Serie mazo largo o no"
                android:id="@+id/nameSerie"
                android:textColor="#ffffff"
                android:textSize="16sp"
                />
    </HorizontalScrollView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="05"
            android:id="@+id/currentEpisode"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/slash"
            android:textColor="#ff1605"
            android:textSize="18sp"
            android:layout_alignTop="@+id/horizontalScrollView"
            android:layout_alignBottom="@+id/horizontalScrollView"
            android:gravity="center_vertical"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="/"
            android:id="@+id/slash"
            android:singleLine="false"
            android:layout_below="@+id/horizontalScrollView"
            android:layout_toLeftOf="@+id/episodes"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_alignTop="@+id/horizontalScrollView"
            android:gravity="center_vertical"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="78"
            android:id="@+id/episodes"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/plus"
            android:layout_alignBottom="@+id/horizontalScrollView"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_alignTop="@+id/horizontalScrollView"
            android:gravity="center_vertical"/>

    <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/plus"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/ic_input_add"/>

</RelativeLayout><!-- From: file:/C:/Users/danidhsm/AndroidStudioProjects/AnimeProject/Anime/src/main/res/layout/anime_row.xml -->